.issue_a {
    padding: 18rpx 30rpx;
    box-sizing: border-box;
    background-color: #f7f7f7;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    padding-bottom: 50rpx;
}

.cardbg {
    width: 100%;
    background-color: white;
    margin-bottom: 18rpx;
    padding: 0 22rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
}

.rowItem {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.left {
    font-size: 28rpx;
    color: #333;
    height: 80rpx;
    line-height: 80rpx;
    flex-shrink: 0;
    /* border: 1rpx solid red; */
}

.right {
    font-size: 24rpx;
    color: #666;
    height: 80rpx;
    line-height: 80rpx;
    /* border: 1rpx solid red; */
    flex-grow: 1;
    text-align: right;
    padding-left: 30rpx;
    box-sizing: border-box;

}

.right .vant_input {
    /* border: 1rpx solid red; */
    height: 70rpx;
    line-height: 70rpx;
    margin-top: 5rpx;
    text-align: right;
    font-size: 24rpx;
    color: #666;
}

.smright .vant_input {
    width: 140rpx;
    text-align: right;
}

.smright .vtsdf {
    text-align: left;
}

.right .van-cell {
    padding: 0 0;
}

.getbtn {
    height: 44rpx;
    background: #246cff;
    border-radius: 10rpx;
    text-align: center;
    color: white;
    line-height: 44rpx;
    margin-left: 10rpx;
    font-size: 22rpx;
    flex-shrink: 0;
}

.authimg {
    width: 300rpx;
    border:1rpx solid rgba(9,201,162,0.5);
    border-radius:10rpx;
    box-sizing:border-box;
    overflow:hidden;
}

.authtext {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    height: 72rpx;
    line-height: 72rpx;
}

.authbtn {
    width: 672rpx;
    height: 72rpx;
    line-height: 72rpx;
    background: rgba(36, 108, 255, 1);
    border-radius: 36rpx;
    color:rgba(255,255,255,1);
    font-size:34rpx;
    text-align: center;
    margin-top: 80rpx;
}
.note{
    position: absolute;
    bottom: -35rpx;
    right: 0;
    color: #FF0000;
    font-size: 22rpx;
}