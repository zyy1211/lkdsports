
.commodity_screen2 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 999;
  color: #fff;
}

/* 海报 */
.poste_box{ 
  width: 100%;
  z-index: 999;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  /* overflow: hidden; */
  /* border: 2rpx solid red; */
}
.poste_content{
  width: 100%;
  margin: auto;
  overflow: hidden;
  background-color: #f5f5f5;
  position: absolute;
  top: 200rpx;
  z-index: 999;
  border-radius: 5rpx;
}
.close-poste{
 width: 100%;
 height: 80rpx;
 position: absolute;
 bottom: 200rpx;
 z-index: 999;
 text-align: center;
}
.close-poste image{
  width: 60rpx;
  height: 60rpx;
  z-index: 999;
  border-radius: 50%;
}

.cvs_btns{

  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24rpx;
  z-index: 999;
}
.cvs_img{
  width: 45rpx;
  height: 45rpx;
}
.brn_box{
  background-color: #246CFF;
  height: 80rpx;
  border-radius: 40rpx;
  width: 260rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.shareBtn{
  position: absolute;
  top: 0;
  left: 0;
  /* border: 1rpx solid red; */
  width: 100%;
  height: 100%;
  background-color: transparent;
}