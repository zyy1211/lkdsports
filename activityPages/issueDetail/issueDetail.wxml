

<view class="issueDetail">
  <view class="textarea_box">
    <view class="notetext">{{detailsText.length}}/300</view>
    <textarea bindinput="bindData" value="{{detailsText}}" class="textareaself" auto-height placeholder="请编辑活动详情……" placeholder-class="pldClass" auto-focus="{{true}}" disable-default-padding="{{true}}" maxlength="300"></textarea>
  </view>
  <view class="uploadbox">
    <van-uploader file-list="{{ detailsImageArr }}"  max-count="5" bind:after-read="afterRead" deletable="{{ true }}" bind:delete="delectimg" />
  </view>
</view>

<view class="fiexBtn">
  <view class="btn sure" bindtap="sure">立即保存</view>
  <view class="btn cancel" bindtap="cancel">取消</view>
</view>
