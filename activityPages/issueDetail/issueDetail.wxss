/* activityPages/issueDetail/issueDetail.wxss */

.textarea_box {
  padding: 40rpx;
  box-sizing: border-box;
  max-height: 600rpx;
}

.pldClass {
  font-size: 24rpx;
  color: #999;
}

.textareaself {
  width: 100%;
  min-height: 300rpx;
}

.uploadbox {
  padding: 30rpx;
  box-sizing: border-box;
}

.uploadbox .van-uploader__preview {
  margin: 20rpx;

}

.uploadbox .van-uploader__upload {
  margin: 20rpx;
}

.uploadbox .van-uploader__preview-image {
  border: 1rpx solid #999;
}

.fiexBtn {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  padding: 0 37rpx;
  box-sizing: border-box;
}

.btn {
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: white;
  border-radius: 20rpx;


}
.sure{
  background-color: #3A59D6;
  flex-grow: 3;
  margin-right: 20rpx;
}
.cancel{
  background-color: #CFCFCF;
  flex-grow: 1;
}