.signlist {
  background-color: #f3f3f3;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  position: relative;
}

.bgblue {
  width: 100vw;
  height: 35rpx;
  background-color: #246CFF;
  flex-shrink: 0;
}

.main {
  flex-grow: 1;
  padding: 74rpx 30rpx 50rpx;
  width: 100%;
  box-sizing: border-box;
}

.signfixed {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.signTab {
  margin: 0 auto;
  width: 570rpx;
  height: 84rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3rpx 4rpx 0rpx rgba(118, 118, 118, 0.23);
  border-radius: 42rpx;
  padding: 7rpx 0;
  display: flex;
  flex-flow: row nowrap;
  box-sizing: border-box;
}

.itemtab {
  margin: 0 10rpx;
  flex-grow: 1;
  font-size: 30rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  color: #666666;
  text-align: center;
}

.activity {
  background-color: #246CFF;
  color: white;
}

.main .cardList {
  padding: 0 0;
}

.itembg {
  background-color: white;
  border-radius: 20rpx;
  padding: 8rpx 10rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.btnsis {
  width: 140rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: rgba(36, 108, 255, 1);
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-right: 16rpx;
}
.btnboxs{
  padding: 23rpx 0 10rpx 30rpx;
}
.bmrs {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
}